@{
    ViewData["Title"] = "Home";
    Layout = "_LayoutIntro"; 
}
<style>
    .body-card {
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
    }
    .body-card:hover {
        cursor:pointer;
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .25) !important;
    }
</style>

<div class="header-into d-flex flex-column justify-content-between align-items-center">
    <div class="header-intro-section-title d-flex flex-column align-items-center gap-3 mb-5">
        <span class="header-intro-title" style="color: #004CAD; font-size:48px; font-weight:bold;">
            Learn English
        </span>
        <span class="header-intro-subtitle" style="color: #828282; font-size:18px;  font-weight:lighter;">
            Improve Your Vocabulary
        </span>
    </div>
    <div class="header-intro-section-image">
        <img src="~/carousel_image.png" />
    </div>
</div>

<div class="body d-flex flex-column gap-4 my-5 p-3">
    <div class="body-section-title d-flex flex-column gap-2" style="color: #004CAD; font-weight:600; font-size:30px;">
        <span class="body-title">
            Use The App
        </span>
        <span class="body-subtitle" style="color: #828282; font-size:16px; font-weight:lighter;">
            with platforms
        </span>
    </div>
    <div class="body-section-cards row justify-content-around">
        <div class="col-md-6 p-5">
            <div class="body-card d-flex flex-column gap-3 h-100 p-4" style="border-radius:12px;">
                <div class="body-card-title" style="font-size:15px;">
                    Click To Use On Android
                </div>
                <div class="body-card-image d-flex align-items-center p-3">
                    <img src="~/android.png" class="mx-auto" style="width:150px; object-fit:contain;" />
                </div>
            </div>
        </div>
        <div class="col-md-6 p-5">
            <div class="body-card d-flex flex-column gap-3 h-100 p-4" style="border-radius:12px;">
                <div class="body-card-title" style="font-size:15px;">
                    Click To Use On IOS
                </div>
                <div class="body-card-image d-flex align-items-center p-3">                
                    <img src="~/ios.png" class="mx-auto" style="width:150px; object-fit:contain;"/>
                </div>
            </div>
        </div>
    </div>
</div>
 